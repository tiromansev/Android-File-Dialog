<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rlFileName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dialog_margin">

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:hint="@string/caption_file_name"
            app:hintEnabled="true">

            <EditText
                android:id="@+id/edtFileName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingEnd="@dimen/file_ext_padding"
                android:layout_alignParentStart="true"
                android:textColor="@color/color_black"
                android:layout_centerVertical="true"
                android:textAppearance="?android:attr/textAppearanceMedium" />
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:id="@+id/edtExtension"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:layout_alignParentEnd="true"
            android:layout_width="wrap_content"
            android:layout_centerVertical="true"
            android:includeFontPadding="false"
            android:paddingTop="@dimen/text_margin"
            android:layout_marginEnd="@dimen/breadcrumb_button_margin"
            android:lineSpacingExtra="0dp"
            android:textColor="@color/color_black"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_height="wrap_content"/>
    </RelativeLayout>

</LinearLayout>